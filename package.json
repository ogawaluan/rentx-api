{
  "name": "boilerplate-api",
  "version": "1.0.0",
  "description": "Boilerplate API using Express.js and TS",
  "main": "server.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "prepare": "husky install",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli -f ./src/config/db.ts",
    "build": "tsc",
    "prestart": "npm run typeorm migration:run",
    "start": "node dist/server.js",
    "predev": "npm run typeorm migration:run",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "pretest": "dotenv cross-var npm run typeorm query \"CREATE DATABASE IF NOT EXISTS $DB_NAME\"_test\"\" && cross-env NODE_ENV=test npm run typeorm migration:run",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --runInBand --forceExit --coverage --verbose true",
    "test:watch": "npm run pretest && cross-env NODE_ENV=test jest --detectOpenHandles --runInBand --forceExit --watch --coverage --verbose true",
    "test:ci": "npm run pretest && cross-env NODE_ENV=test jest --config ./jest.config.ts --collectCoverage --runInBand --coverageDirectory=\"./coverage\" --ci --reporters=default --reporters=jest-junit --watchAll=false",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "argon2": "^0.28.2",
    "aws-sdk": "^2.964.0",
    "cors": "^2.8.5",
    "cross-var": "^1.1.0",
    "dotenv": "^9.0.2",
    "dotenv-cli": "^4.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "faker": "^5.5.3",
    "handlebars": "^4.7.7",
    "ioredis": "^4.27.7",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.3",
    "mysql": "^2.18.1",
    "nodemailer": "^6.6.3",
    "rate-limiter-flexible": "^2.2.4",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.28.3",
    "supertest": "^6.1.3",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.32",
    "typeorm-pagination": "^2.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.5",
    "@types/ioredis": "^4.26.6",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.4",
    "@types/sharp": "^0.28.5",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.2.4"
  }
}
